extends layout

block content
  h1 #{title}: #{categories.name}
  p= categories.description

  if products.length

    p #[strong Delete the following products before attempting to delete this category.]

    div(style='margin-left:20px;margin-top:20px')

      h4 Categories

      dl
      each prod in products
        dt
          a(href=prod.url) #{prod.name}
        dd #{prod.description}

  else
    p Do you really want to delete this Category?

    form(method='POST' action='')
      div.form-group
        input#id.form-control(type='hidden',name='id', required='true', value=categories._id )

      button.btn.btn-primary(type='submit') Delete
