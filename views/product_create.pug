extends layout

block content
  h1= title

  form(method='POST' action='')
    div.form-group
      label(for='name') Product Name:
      input#name.form-control(type='text', placeholder='Name of Product' name='name' required='true' value=(undefined===product ? '' : product.name))
    div.form-group
      label(for='description') Description:
      textarea#description.form-control(type='textarea', placeholder='Description' name='description' required='true') #{undefined===product ? '' : product.description}
    div.form-group
      label(for='productNumber') Product Number:
      input#productNumber.form-control(type='text', placeholder='#23133' name='productNumber' value=(undefined===product ? '' : product.productNumber) required='true')
    div.form-group
      label(for='quantity') Quantity:
      input#quantity.form-control(type='number', placeholder='Quantity' name='quantity' required='true' value=(undefined !== product ? product.quantity : ''))
    div.form-group
      label(for='price') Price:
      input#price.form-control(type='number', placeholder='Price' name='price' step='0.01' required='true' value=(undefined !== product ? product.price : ''))
    div.form-group
       label(for='category') Category:
       select#category.form-control(type='select', placeholder='Select Category' name='category' required='true')
         each category in categories
          option(value=category._id, selected=(product && product.category.name && product.category.toString() === category._id.toString())) #{category.name}
    div.form-group
      button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
